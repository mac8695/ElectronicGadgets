<% include partials/header.ejs%>

<a href="/gadgets/add"><strong>Add gadget for sale</strong></a>

<!--search box-->
<form>
  <input type="text" placeholder="Search Gadget..." required>
  <input type="button" class="btn btn-info" value="search" >
</form>

<table class="table table-striped">
  <tr>
    <th>Gadget</th>
    <th>Type</th>
    <th>Price</th>
    <th>Condition</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% for (var i=0; i< gadgets.length; i++) { %>
  <tr>
    <td><%= gadgets[i].gadget %></td>
    <td><%= gadgets[i].typeOfGadget %></td>
    <td>$ <%= gadgets[i].price %></td>
    <td><%= gadgets[i].condition %></td>

    <td><a href="/gadgets/<%=gadgets[i]._id %>">Edit</a> </td>
    <td><a href="/gadgets/delete/<%= gadgets[i]._id %>"  class="confirmation">Delete</a> </td>

  </tr>
<%}%>
</table>

<%include partials/footer.ejs%>