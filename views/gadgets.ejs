<% include partials/header.ejs%>

<a href="/gadgets/add">Add gadget for sale</a>
<table class="table table-striped">
  <tr>
    <th>Gadget</th>
    <th>Type</th>
    <th>Price</th>
    <th>Condition</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% for (var i=0; i< gadgets.length; i++) { %>
  <tr>
    <td><%= gadgets[i].gadget %></td>
    <td><%= gadgets[i].typeOfGadget %></td>
    <td><%= gadgets[i].price %></td>
    <td><%= gadgets[i].condition %></td>

    <td><a href="/gadgets/<%=gadgets[i]._id %>">Edit</a> </td>
    <td><a href="/gadgets/delete/<%=gadgets[i]._id %>"  class="confirmation">Delete</a> </td>

  </tr>
<%}%>
</table>

<%include partials/footer.ejs%>